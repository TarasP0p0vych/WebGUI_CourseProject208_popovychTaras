@page
@model WebGUI_CourseProject208_popovychTaras.Pages.Customers.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customers</title>
  </head>
  <body>
      <br></br>
    <h2>Customers list</h2>
    <a class="btn-primary btn-sm" href="/Customers/CreateCustomer">New Customer</a>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
<th>Company Name</th>
<th>Phone</th>
<th>Email</th>
<th>First Name</th>
<th>Last Name</th>
<th>Country</th>
<th>City</th>
<th>Address</th>
<th>Postal Code</th>
        </tr>
      </thead>
      <tbody>
            @foreach (var item in Model.customersList)
            {
                <tr>
            <td>@item.customerID</td>
    <td>@item.companyName</td>
    <td>@item.customerPhone</td>
    <td>@item.customerEmail</td>
    <td>@item.customerFirstName</td>
    <td>@item.customerLastName</td>
    <td>@item.customerCountry</td>
    <td>@item.customerCity</td>
    <td>@item.customerAddress</td>
    <td>@item.postalCode</td>
                  <td>
                        <a class="btn btn-primary btn-sm" href="/Customers/CustomerEdit?id=@item.customerID">Edit</a>
                                    <a class="btn btn-danger btn-sm" href="/Customers/CustomerDelete?id=@item.customerID">Delete</a>
                  </td>
                </tr>
            }
      </tbody>
    </table>
  </body>
</html>